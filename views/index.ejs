  <header class="bg-primary text-white">
    <div class="container text-center">
      <h1>Welcome to CounterRoyale</h1>
      <p class="lead">Ladder is aids.</p>
    </div>
  </header>
  <section id="services">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h2>How to Win with Xbow:</h2>
          <p class="lead"></p>
          <img src="https://royaleapi.github.io/cr-api-assets/cards-150/x-bow.png" alt="xbow">
          <ol>
            <li>Place Xbow</li>
            <li>Place Tesla</li>
            <li>Spam cycle troops</li>
          </ol>
        </div>
      </div>
    </div>
  </section>
  <hr>
  <section id="about" class="bg-light">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h2>Deck Builder</h2>
          <p class="lead">Under construction.</p>
          <div class="cards">
            <% data.forEach((card) => { %>
              <% var cardImgName = card.name.split('.').join("").replace(/\s+/g, '-').toLowerCase(); %>
              <img src="https://royaleapi.github.io/cr-api-assets/cards-75/<%= cardImgName %>.png">
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </section>
